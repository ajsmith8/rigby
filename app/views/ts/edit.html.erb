<div class="ui-grid-b"> 
	<div class="ui-block-a">
		<div style="margin: 0 -1em 0 0">
			<%= link_to("Cancel", @topic, "data-role" => "button", "data-theme"=>"e", "data-icon"=>"delete", "data-mini"=>"true")%>
		</div>
	</div>
	<div class="ui-block-b"></div>
	<div class="ui-block-c">
		
	</div>
</div>

<%= form_for @topic, html:{"data-ajax"=>"false"} do |f| %>
  <div class="action", style="margin: 0.5em 0 1.2em 0;">
    <%= f.label :title, "Topic Title", "style"=>"margin: 0em; font-size: 0.8em; text-align: center; font-weight: bold;"%>
		<%= f.text_area :title, "style"=>"font-size: 0.9em;" %>
  </div>

  <div class="action">
		<%= f.label :description, "Description", "style"=>"margin: 0em; font-size: 0.8em; text-align: center; font-weight: bold;"%>
    <%= f.text_area :description, "style"=>"font-size: 0.9em;" %>
  </div>
	
	<div data-role="collapsible">
  	<h2>Edit Majority</h2>
		<p style="font-size: 0.9em; margin: -0.2em 0 0.8em 0; line-height: 125%">pro or con</p>
		<%= f.text_area :majority %>
	</div>

	<div class="ui-grid-b">
		<div class="ui-block-a"></div>
		<div class="ui-block-b">
			<div class="actions", style="margin: 0.7em -0.5em 0.7em -0.5em">
		    <%= f.submit "Submit All", "data-theme"=>"b", "data-mini"=>"true"%>
		  </div>
		</div>
	</div>
<% end %>

<div data-role = "collapsible">
	<h2>Edit Categories</h2>
	<div data-theme="a">
	<%= form_for(@category_relationship) do |f| %>
		<%= hidden_field_tag "category_relationship[category_ids][]", nil %>
		<%= f.hidden_field :t_id, value: @topic.id %>
		<% Category.all.each do |category| %>
			<%= check_box_tag "category_relationship[category_ids][]", category.id, @ids.include?(category.id), id: dom_id(category), "data-theme"=>"e"%>
			<%= label_tag dom_id(category), category.name %>
			<% end %>
			<%= f.submit "Change Categories" %>
		<% end %>
	</div>
</div>
<div class="ui-grid-b">
	<div class="ui-block-a"></div>
	<div class="ui-block-b">
		<div style="margin: 0 -1.5em 0 -1.5em;">
			<%= link_to("Delete Topic", @topic, method: :delete, "data-role" => "button", "data-theme"=>"a", "data-icon"=>"delete", "data-mini"=>"true", "data-ajax"=>"false")%>
		</div>
	</div>
</div>