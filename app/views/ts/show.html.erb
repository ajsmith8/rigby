<div data-role="page" id="addnewpro">
	<div class="ui-grid-b">
		<div class="ui-block-a"></div>
		<div class="ui-block-b">
			<div style="margin: 0.7em -2.5em 0.7em -2.5em"><%= link_to("Back", "#", "data-role" => "button", "data-theme"=>"e", "data-icon"=>"back", "data-rel"=>"back")%></div>
		</div>
	</div>

	<%= form_for @newpro, html:{"data-ajax"=>"false"} do |f| %>
		<%= f.hidden_field :t_id, value: @topic.id %>
		<%= f.hidden_field :is_pro, value: true %>
	  <div class="field", style="margin: 0 0 -1em 0;">
	    <%= f.text_area :title, "placeholder"=>"Add a 'Pro' reason to the topic!"%></br>
	  </div>
		<div data-role="collapsible">
	  	<h2><span style="font-size: 0.9em; color: #3059AC;">Optional:</span><span style="font-size: 0.9em;"> Sources/Additional Info</span></h2>
			<p style="font-size: 0.9em; margin: -0.2em 0 0.8em 0; line-height: 125%">Cite your sources here, or at least provide more information about your post.</p>
	  	<div class="field", style="margin: 0 0 -0.8em 0">
		    <%= f.text_area :description %>
		  </div>
		</div>
		<div data-role="collapsible">
			<h2><span style="font-size: 0.9em; color: #3059AC;">Optional:</span><span style="font-size: 0.9em;"> Create the Quiz Question</span></h2>
			<div class="field", style="margin: 0 0 -1em 0;">
		    <%= f.text_area :question, "placeholder"=>"Type quiz question here..."%></br>
		  </div>
			<div class="field", style="margin: 0 0 -1em 0;">
		    <%= f.text_field :correct_answer, "placeholder"=>"Correct Answer ..."%></br>
		  </div>
			<div class="field", style="margin: 0 0 -1em 0;">
		    <%= f.text_field :wrong_answer1, "placeholder"=>"Wrong Answer 1 ..."%></br>
		  </div>
			<div class="field", style="margin: 0 0 -1em 0;">
		    <%= f.text_field :wrong_answer2, "placeholder"=>"Wrong Answer 2 ..."%></br>
		  </div>
			<div class="field", style="margin: 0 0 -1em 0;">
		    <%= f.text_field :wrong_answer3, "placeholder"=>"Wrong Answer 3 ..."%></br>
		  </div>
		</div>

		<div class="ui-grid-b">
			<div class="ui-block-a"></div>
			<div class="ui-block-b">
				<div class="actions", style="margin: 0.7em -2.5em 0.7em -2.5em">
			    <%= f.submit "Submit!", "data-theme"=>"b", "data-icon"=>"check"%>
			  </div>
			</div>
		</div>	
	<% end %>
</div>

